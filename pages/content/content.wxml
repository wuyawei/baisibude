      <!--视频-->
      <view class="content-cont" hidden="{{true}}">
          <video id="" src="" bindplay="videoPlay" bindended="videoEndPlay" catchtap="tapVideo" controls style="" ></video>
      </view>

      <!--音频-->
      <view class="content-cont" hidden="{{true}}">
          <audio id="" src="" poster="" author="" bindplay="audioplay" bindended="audioEndPlay" controls></audio>
      </view>
    </view>

    <!-- 内容底部 -->
    <view class="c_bottom">

      <view class="btn">
        <text class="iconfont icon-dianzan1"></text>
        <text class="icontext">66</text>
      </view>
      <view class="btn">
        <text class="iconfont icon-z-nolikeFill"></text>
        <text class="icontext">66</text>
      </view>
      <view class="btn">
        <text class="iconfont icon-zhuanfa1"></text>
        <text class="icontext">66</text>
      </view>
      <view class="btn">
        <text class="iconfont icon-gengduo"></text>
      </view>

    </view>
  </view>
</template>
