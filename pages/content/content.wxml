<template name="contentItem">
  <view class="contentbox">

    <!-- 内容顶部 -->
    <view class="c_top">
      <image class="avator" mode="aspectFit" src="../../assets/img/tabBar_essence_icon.png"></image>

      <view class="name_time">
          <text class="time">李明</text>
          <text class="date">2017-12-03 18:26:28</text>
      </view>
      <text class="more icon-gengduo1 iconfont"></text>
    </view>

    <!-- 内容 -->
    <view class="c_main">
      <text class="content-title">有哪些颜值爆表的零食！</text>

      <!-- 图片  -->
      <view class="content-cont" hidden="{{false}}" >
          <image src="" mode="scaleToFill" style=""></image>
